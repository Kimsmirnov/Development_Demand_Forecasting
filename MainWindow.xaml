<Window x:Class="Development_Demand_Forecasting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Height="720" Width="1080" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolTovis"/>
        <Storyboard x:Key="ExpandMainBoardStoryboard">
            <ThicknessAnimation
                Storyboard.TargetName="MainBoard"
                Storyboard.TargetProperty="Margin"
                To="-180,20,20,20"
                Duration="0:0:0.3"
                AccelerationRatio="0.2"
                DecelerationRatio="0.8"/>
        </Storyboard>

        <Storyboard x:Key="CollapseMainBoardStoryboard">
            <ThicknessAnimation
                Storyboard.TargetName="MainBoard"
                Storyboard.TargetProperty="Margin"
                To="30,20,20,20"
                Duration="0:0:0.3"
                AccelerationRatio="0.2"
                DecelerationRatio="0.8"/>
        </Storyboard>
    </Window.Resources>

    <Border Background="#eff2f7" CornerRadius="30" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Left Menu-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Margin="20 28 0 35" Style="{StaticResource topButton}" Click="Menu_Click">
                    <Icons:PackIconMaterial Kind="Menu" Width="15" Height="15" />
                </Button>

                <Border x:Name="SidePanel" Grid.Row="1" Background="Tomato" CornerRadius="0 50 0 30" RenderTransformOrigin="0,0">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="SidePanelTransform" />
                    </Border.RenderTransform>
                    <DockPanel>
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100"
                                DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="https://avatars.githubusercontent.com/u/105752698?v=4" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>

                        <TextBlock Text="SomeText" Foreground="White" FontSize="22" FontWeight="SemiBold"
                                    DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10"/>
                        <TextBlock Text="SomeText" Foreground="White" FontSize="14" FontWeight="SemiBold"
                                    DockPanel.Dock="Top" TextAlignment="Center"/>

                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="LightCoral"/>

                        <StackPanel DockPanel.Dock="Top">
                            <RadioButton  Style="{StaticResource menuButton}" GroupName="Menu" IsChecked="True">
                                <StackPanel Orientation="Horizontal">
                                    <Icons:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Dashboard"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}" GroupName="Menu">
                                <StackPanel Orientation="Horizontal">
                                    <Icons:PackIconMaterial Kind="CalendarClock" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Events"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}" GroupName="Menu">
                                <StackPanel Orientation="Horizontal">
                                    <Icons:PackIconMaterial Kind="AccountMultiple" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Members"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}" GroupName="Menu">
                                <StackPanel Orientation="Horizontal">
                                    <Icons:PackIconMaterial Kind="Cash" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Wallet"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}" GroupName="Menu">
                                <StackPanel Orientation="Horizontal">
                                    <Icons:PackIconMaterial Kind="ForumOutline" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Messages"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                    </DockPanel>
                </Border>

            </Grid>

            <!--Main Board-->
            <Grid x:Name="MainBoard" Grid.Column="1" Margin="30 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Top Buttons-->
                <Button Style="{StaticResource topButton}" Margin="0,0,90,0" HorizontalAlignment="Right" Click="Minus_Click">
                    <Icons:PackIconMaterial Kind="Minus"/>
                </Button>

                <Button Style="{StaticResource topButton}" Margin="0,0,45,0" HorizontalAlignment="Right" Click="Maximize_Click">
                    <Icons:PackIconMaterial Kind="CheckboxBlankOutline"/>
                </Button>

                <Button Style="{StaticResource topButton}" Margin="0,0,0,0" HorizontalAlignment="Right" Click="Close_Click">
                    <Icons:PackIconMaterial Kind="Close"/>
                </Button>

                <TextBlock Text="Main Board" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 20 0 0"
                           HorizontalAlignment="Left" Foreground="#121518" Height="43" Grid.RowSpan="2" VerticalAlignment="Top"/>

                <Button Style="{StaticResource addButton}" Click="Forcast_Click">
                    <StackPanel Orientation="Horizontal">
                        <Icons:PackIconMaterial Kind="GoogleAnalytics" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" Foreground="White"/>
                        <TextBlock Text="Forcast"/>
                    </StackPanel>
                </Button>

                <!--Seprator-->
                <Separator Height="1" Grid.Row="3" Background="#dae2ea" Margin="0 -1 0 10" />

                <!--Content-->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
                    <RadioButton Content="Products" Style="{StaticResource tabButton}" GroupName="Tabs" Checked="Products_Checked"/>
                    <RadioButton Content="Suppliers" Style="{StaticResource tabButton}" GroupName="Tabs" Checked="Suppliers_Checked"/>
                    <RadioButton Content="Warehouses" Style="{StaticResource tabButton}" GroupName="Tabs" Checked="Warehouses_Checked"/>
                    <RadioButton Content="Inventory" Style="{StaticResource tabButton}" GroupName="Tabs" Checked="Inventory_Checked"/>
                    <RadioButton Content="Sales" Style="{StaticResource tabButton}" GroupName="Tabs" Checked="Sales_Checked"/>
                    <RadioButton Content="Forecasts" Style="{StaticResource tabButton}" GroupName="Tabs" Checked="Forecasts_Checked"/>
                </StackPanel>

                <!--Counter Title-->
                <TextBlock Text="Content" Grid.Row="4" FontSize="18" FontWeight="SemiBold"
                           Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!--Search Field-->
                <Grid Width="200" HorizontalAlignment="Right" Grid.Row="4">
                    <TextBlock Margin="15 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                Panel.ZIndex="1" Text="Search"
               Visibility="{Binding ElementName=searchBox,Path=Text.IsEmpty,Converter={StaticResource BoolTovis}}"/>

                    <TextBox x:Name="searchBox" Style="{StaticResource TextBoxSearch}"/>

                    <Icons:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                        Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"/>
                </Grid>

                <DataGrid x:Name="accountsDataGrid" Grid.Row="5" AutoGenerateColumns="True" HeadersVisibility="Column" Background="White" BorderThickness="0" GridLinesVisibility="None"
                          RowStyle="{StaticResource ModernDataGridRow}" CellStyle="{StaticResource ModernDataGridCell}" ColumnHeaderStyle="{StaticResource ModernDataGridHeader}" RowHeight="40" FontFamily="Segoe UI"
                          CanUserResizeColumns="False" CanUserResizeRows="False" CanUserReorderColumns="False"/>
            </Grid>
        </Grid>
    </Border>
</Window>